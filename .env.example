# Database
# PostgreSQL connection string
# For Docker: postgres://autobudgeter:autobudgeter@localhost:5432/autobudgeter
# For local Postgres: postgres://username:password@localhost:5432/autobudgeter
DATABASE_URL="postgres://autobudgeter:autobudgeter@localhost:5432/autobudgeter"

# Encryption
# Generate with: openssl rand -base64 32
# Used for encrypting sensitive data (Plaid tokens, Google refresh tokens)
ENCRYPTION_KEY="your-32-character-encryption-key-here"

# Authentication
# Password for logging into the app
# Set AUTH_DISABLED=true to disable authentication (development only)
APP_PASSWORD="your-secure-password-here"
AUTH_DISABLED="false"

# Plaid (Bank Integration)
# Get from: https://dashboard.plaid.com/team/keys
# Use "sandbox" for testing, "development" or "production" for live
PLAID_CLIENT_ID="your-plaid-client-id"
PLAID_SECRET="your-plaid-secret-key"
PLAID_ENV="sandbox"

# Google Sheets (Optional - only needed if using Google Sheets export)
# Get from: https://console.cloud.google.com/apis/credentials
# Create OAuth 2.0 Client ID (Web application)
# Add redirect URI: http://localhost:3000/api/google/exchange
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GOOGLE_REDIRECT_URI="http://localhost:3000/api/google/exchange"

# LLM Providers (Optional - only needed if using LLM categorization)
# Choose one or both:

# OpenRouter (supports multiple models)
OPENROUTER_API_KEY="your-openrouter-api-key"
OPENROUTER_MODEL="openai/gpt-4o-mini"

# OR Google Gemini
GEMINI_API_KEY="your-gemini-api-key"
GEMINI_MODEL="gemini-1.5-pro"

# Node Environment
# Set to "production" in production
NODE_ENV="development"
